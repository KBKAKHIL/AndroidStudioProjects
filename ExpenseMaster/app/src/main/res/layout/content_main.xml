<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.converter.indra.expensemaster.MainActivity"
    tools:showIn="@layout/app_bar_main">

   <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/tbl_layout"
       android:weightSum="@integer/google_play_services_version"
       >
       <TableRow android:layout_marginTop="@dimen/activity_vertical_margin">
           <ImageButton
               android:layout_width="100dp"
               android:layout_height="120dp"
               android:id="@+id/btn_add"
               android:src="@drawable/ic_add"
               android:layout_weight="@integer/google_play_services_version"

               />
           <Button
               android:id="@+id/btn_income"
               android:layout_width="120dp"
               android:layout_height="120dp"
               android:text="Income"
               android:textSize="25dp"
               android:layout_weight="@integer/google_play_services_version"/>
           </TableRow>
       <TableRow android:layout_marginTop="@dimen/activity_vertical_margin">
           <ImageButton
               android:id="@+id/btn_graph"
               android:src="@drawable/ic_graph"
               android:layout_width="100dp"
               android:layout_height="120dp"
               android:layout_weight="@integer/google_play_services_version"
               />
           <Button
               android:id="@+id/btn_category"
               android:layout_width="120dp"
               android:layout_height="120dp"
               android:text="Category"
               android:textSize="25dp"
               android:layout_weight="@integer/google_play_services_version"/>
           </TableRow>
       <TableRow android:layout_marginTop="@dimen/activity_vertical_margin">
           <ImageButton
               android:id="@+id/btn_setting"
               android:layout_width="100dp"
               android:layout_height="120dp"
               android:src="@drawable/ic_settings"
               android:layout_weight="@integer/google_play_services_version"/>
           <ImageButton
               android:id="@+id/btn_info"
               android:layout_width="100dp"
               android:layout_height="120dp"
               android:src="@drawable/ic_info"
               android:layout_weight="@integer/google_play_services_version"/>

           </TableRow>
       </TableLayout>





</android.support.constraint.ConstraintLayout>
