<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

   <android.support.design.widget.AppBarLayout android:layout_height="wrap_content"
       layout_width="match_parent">
       <include android:layout_height="wrap_content"
           android:layout_width="match_parent"
           layout="@layout/mytoolbar"/>
       <android.support.v7.widget.Toolbar android:layout_width="match_parent"
           android:layout_height="wrap_content" android:id="@+id/toolbar"
          >
           <android.support.design.widget.TabLayout android:layout_width="match_parent"
               android:layout_height="wrap_content" android:id="@+id/tablayout"
               >

           </android.support.design.widget.TabLayout>
       </android.support.v7.widget.Toolbar>
   </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewpager"></android.support.v4.view.ViewPager>

</LinearLayout>
